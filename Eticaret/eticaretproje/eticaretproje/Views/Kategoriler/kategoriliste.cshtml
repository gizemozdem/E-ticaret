@model List<eticaretproje.Models.Kategoriler>
@{
    ViewBag.Title = "kategoriliste";
}

<head>
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.10.20/datatables.min.js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.10.20/datatables.min.css" />



</head>
<div class="container">
    <div class="table-responsive">
        <table id="kategori" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>No</th>
                    <th>Kategori Adi</th>
                    <th>Kategori Sil</th>
                    <th>Kategori Güncelle</th>

                </tr>
            </thead>


            @foreach (var item in Model)
            {
                <tbody>
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Tanim</td>
                        <td>
                            <a class="btn btn-primary btn-sm" href="/Kategoriler/Guncelle/@item.Id">Güncelle</a>
                        </td>
                        <td>
                            <a class="btn btn-primary btn-sm" href="/Kategoriler/KategoriSil/@item.Id" onclick="return confirm('Kategoriyi silmek istiyor musunuz?')">Sil</a>


                        </td>
                    </tr>
                </tbody>

            }



        </table>

    </div>
</div>
<script type="text/javascript">
        $(document).ready(function () {
            $('#kategori').DataTable();
        });
</script>


